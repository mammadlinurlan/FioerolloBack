@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <h2>Create your own slider</h2>
        <div class="mb-3 ">
            <label asp-for="@Model.ImageFile" class="form-label">Slider Image</label>
            <input accept="image/*" asp-for="@Model.ImageFile" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.SignatureFile" class="form-label">Signature</label>
            <input accept="image/*" asp-for="@Model.SignatureFile" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.SignatureFile"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.Title"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.SubTitle" class="form-label">Subtitle</label>
            <input asp-for="@Model.SubTitle" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.SubTitle"></span>

        </div>

        <button type="submit" class="btn btn-primary">CREATE</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}


